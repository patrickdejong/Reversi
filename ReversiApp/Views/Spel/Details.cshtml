@model ReversiApp.Models.Spel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div style="float: right">
    <h4>Spel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Token)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Token)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AandeBeurt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AandeBeurt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.JsonBord)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.JsonBord)
        </dd>
    </dl>
    <p>Spelers:</p>
    <ul>
        @foreach (var item in Model.Spelers) {
        <li>@Html.DisplayFor(Speler => item.Naam) - @Html.DisplayFor(Speler => item.Token)</li>
        }
    </ul>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Spelbord" asp-route-id="@Model.ID">Spelbord</a> |
    <a asp-action="Index">Back to List</a>
</div>
